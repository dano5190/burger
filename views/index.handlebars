<h1>Eat-Da-Burger!</h1>

<img src="/assets/img/burger.png" alt="Burger" height= "200" width="200">

<div class="row">
    <div class="column">
        <h3>Ready Burgers!</h3>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <p>
                {{burger_name}}

                <button class="devour" data-id="{{id}}" data-isEaten="{{devoured}}">Devour It!</button>
            </p>
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="column">
        <h3>Eaten Burgers!</h3>
        <ul id="eaten">
            {{#each burgers}}
            {{#if devoured}}
            <p>{{burger_name}}</p>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<form class="create-form">
    <div class="form-group">
        <label for="bur">Burger Order: </label>
        <input type="text" id="bur" name="name">
    </div>

    <button type="submit">Order Up!!!</button>
</form>
<h2>Place Your Burger Order Here</h2>